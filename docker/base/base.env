# =========================
# JVM / General
# =========================
: "${TZ:=UTC}"
: "${INIT_MEMORY:=1G}"
: "${MAX_MEMORY:=1G}"
: "${USE_AIKAR_FLAGS:=false}"
: "${JVM_OPTS:=}"
: "${EXTRA_ARGS:=}"

# =========================
# Server Core / Network
# =========================
: "${TYPE:=vanilla}"
: "${VERSION:=latest}"
: "${EULA:=false}"
: "${SERVER_PORT:=25565}"
: "${SERVER_IP:=}"
: "${ONLINE_MODE:=true}"
: "${PREVENT_PROXY_CONNECTIONS:=false}"
: "${USE_NATIVE_TRANSPORT:=true}"
: "${ENABLE_STATUS:=true}"
: "${QUERY_PORT:=25565}"
: "${ENABLE_QUERY:=false}"
: "${ENABLE_RCON:=false}"
: "${RCON_PORT:=25575}"
: "${RCON_PASSWORD:=}"

# =========================
# Players / Gameplay
# =========================
: "${DIFFICULTY:=easy}"
: "${MODE:=survival}"
: "${MAX_PLAYERS:=20}"
: "${PVP:=true}"
: "${ALLOW_FLIGHT:=false}"
: "${HARDCORE:=false}"
: "${FORCE_GAMEMODE:=false}"
: "${SPAWN_PROTECTION:=16}"
: "${PLAYER_IDLE_TIMEOUT:=0}"
: "${OP_PERMISSION_LEVEL:=4}"
: "${FUNCTION_PERMISSION_LEVEL:=2}"

# =========================
# World / Generation
# =========================
: "${LEVEL:=world}"
: "${LEVEL_SEED:=}"
: "${LEVEL_TYPE:=minecraft:normal}"
: "${GENERATE_STRUCTURES:=true}"
: "${ALLOW_NETHER:=true}"
: "${MAX_WORLD_SIZE:=29999984}"
: "${SPAWN_ANIMALS:=true}"
: "${SPAWN_MONSTERS:=true}"
: "${SPAWN_NPCS:=true}"

# =========================
# Performance / View
# =========================
: "${VIEW_DISTANCE:=10}"
: "${SIMULATION_DISTANCE:=10}"
: "${ENTITY_BROADCAST_RANGE_PERCENTAGE:=100}"
: "${NETWORK_COMPRESSION_THRESHOLD:=256}"
: "${SYNC_CHUNK_WRITES:=true}"

# =========================
# Chat / Messaging
# =========================
: "${MOTD:=A Minecraft Server}"
: "${BROADCAST_CONSOLE_TO_OPS:=true}"
: "${BROADCAST_RCON_TO_OPS:=true}"
: "${ENFORCE_WHITELIST:=false}"
: "${WHITE_LIST:=false}"

# =========================
# Security / Profile
# =========================
: "${ENFORCE_SECURE_PROFILE:=false}"
: "${TEXT_FILTERING_CONFIG:=}"
: "${RATE_LIMIT:=0}"
: "${PAUSE_WHEN_EMPTY_SECONDS:=-1}"

# =========================
# OPS / WHITELIST
# =========================
: "${OPS:=}"
: "${WHITELIST:=}"
: "${ENABLE_WHITELIST:=false}"

# =========================
# S3 (disabled by default)
# =========================
: "${S3_SYNC_ENABLED:=false}"
: "${S3_ENDPOINT:=}"
: "${S3_BUCKET:=}"
: "${S3_ACCESS_KEY:=}"
: "${S3_SECRET_KEY:=}"
: "${S3_REGION:=}"

# =========================
# RCON Configuration
# =========================
: "${ENABLE_RCON:=true}"
: "${RCON_PORT:=25575}"
: "${RCON_PASSWORD:="change_this_password"}"
: "${RCON_MAX_CONNECTIONS:=5}"
: "${RCON_TIMEOUT:=60}"