{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",

  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": {
          "type": "string",
          "pattern": "^java(8|11|17|21|25)$",
          "description": "Java version tag"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent"]
        }
      },
      "required": ["repository", "tag"]
    },

    "server": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "VANILLA",
            "FABRIC",
            "FORGE",
            "NEOFORGE",
            "PAPER",
            "PURPUR",
            "VELOCITY",
            "WATERFALL",
            "BUNGEECORD"
          ]
        },
        "minecraftVersion": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
        }
      },
      "required": ["type"]
    },

    "env": {
      "type": "object",
      "properties": {
        "EULA": { "type": "string", "enum": ["TRUE"] },
        "MAX_MEMORY": {
          "type": "string",
          "pattern": "^[0-9]+[MG]$"
        },
        "OPS": { "type": "string" },
        "WHITELIST": { "type": "string" }
      }
    },

    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+Gi$"
            },
            "nvidia.com/gpu": {
              "type": "integer",
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    },

    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minReplicas": { "type": "integer", "minimum": 1 },
        "maxReplicas": { "type": "integer", "minimum": 1 },
        "targetPlayers": {
          "type": "integer",
          "minimum": 1,
          "description": "Players per pod"
        }
      }
    }
  }
}
